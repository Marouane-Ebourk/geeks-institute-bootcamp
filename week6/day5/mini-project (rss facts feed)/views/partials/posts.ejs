<div class="posts-list space-y-8">
  <% if (posts && posts.length > 0) { %>
    <% posts.forEach(function(post) { %>
      <div class="post bg-white rounded-lg shadow p-6">
        <h3 class="text-xl font-semibold mb-2">
          <a href="<%= post.link %>" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:underline">
            <%= post.title %>
          </a>
        </h3>
        <p class="text-gray-500 text-sm mb-1"><strong>Published:</strong> <%= post.pubDate %></p>
        <p class="text-gray-500 text-sm mb-1"><strong>Creator:</strong> <%= post.creator %></p>
        <% if (post.categories && post.categories.length > 0) { %>
          <p class="text-gray-500 text-sm mb-1">
            <strong>Categories:</strong>
            <% post.categories.forEach(function(category, idx) { %>
              <span><%= category %><%= idx < post.categories.length - 1 ? ', ' : '' %></span>
            <% }); %>
          </p>
        <% } %>
        <div class="post-content text-gray-800">
          <%- post.content %>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <p class="text-gray-500">No posts available.</p>
  <% } %>
</div>